
export COMPOSE_FILE=./example/docker-compose.yml
export CURL="curl --silent --fail -m10"
export FC_EXEC="fat exec"
export FC_STATUS="fat systemctl status --no-pager -l"
export FC_COMPOSE="fat exec /controller/bin/docker-compose -f /var/lib/controller/"

export D0_COMPOSE="$FC_COMPOSE/daemons/daemon0/docker-compose.yml -p daemon_daemon0"
export D1_COMPOSE="$FC_COMPOSE/daemons/daemon1/docker-compose.yml -p daemon_daemon1"
export D2_COMPOSE="$FC_COMPOSE/daemons/daemon2/docker-compose.yml -p daemon_daemon2"
export D3_COMPOSE="$FC_COMPOSE/daemons/daemon3/docker-compose.yml -p daemon_daemon3"
export S0_COMPOSE="$FC_COMPOSE/services/service0/docker-compose.yml -p service_service0"
export S1_COMPOSE="$FC_COMPOSE/services/service1/docker-compose.yml -p service_service1"
export S2_COMPOSE="$FC_COMPOSE/services/service2/docker-compose.yml -p service_service2"
export S3_COMPOSE="$FC_COMPOSE/services/service3/docker-compose.yml -p service_service3"

export D0_STATUS="$FC_STATUS controller.daemon.daemon0.0"
export D1_STATUS="$FC_STATUS controller.daemon.daemon1.0"
export D2_STATUS="$FC_STATUS controller.daemon.daemon2.0"
export D3_STATUS="$FC_STATUS controller.daemon.daemon3.0"
export D4_STATUS="$FC_STATUS controller.daemon.daemon4"

export S0_STATUS="$FC_STATUS controller.service.service0.0"
export S1_STATUS="$FC_STATUS controller.service.service1.0"
export S2_STATUS="$FC_STATUS controller.service.service2.0"
export S3_STATUS="$FC_STATUS controller.service.service3.0"
export S4_STATUS="$FC_STATUS controller.service.service4.0"
export S5_STATUS="$FC_STATUS controller.service.service5.0"
