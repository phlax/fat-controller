#!/bin/bash


. /usr/lib/fatc/functions


ARG=$1
shift


case $ARG in
    configure )
	fatc_configure
	;;
    d | daemon)
	stackctl daemon "${@}"
	;;
    s | service )
	stackctl service "${@}"
	;;
    resolve )
	what=$1
	shift
	fatc_"$what"_resolve "${@}"
	;;

    start-backend )
	fatc_backend_start "${@}"
	;;
    start-controller )
	fatc_controller_start "${@}"
	;;
    start-daemon-stack )
	fatc_stack_daemon_start "${@}"
	;;
    start-proxy )
	fatc_proxy_start "${@}"
	;;
    start-service-stack )
	fatc_stack_service_start "${@}"
	;;
    stop-backend )
	fatc_backend_stop "${@}"
	;;
    stop-controller )
	fatc_controller_stop "${@}"
	;;
    stop-daemon-stack )
	fatc_stack_daemon_stop "${@}"
	;;
    stop-idle )
	fatc_idle_stop
	;;
    stop-service-stack )
	fatc_stack_service_stop "${@}"
	;;
    wait-backend )
	fatc_backend_wait "${@}"
	;;
    wait-daemon-stack )
	fatc_stack_daemon_wait "${@}"
	;;
    wait-service-stack )
	fatc_stack_service_wait "${@}"
	;;
esac
